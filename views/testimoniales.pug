extends ./layouts/index
block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina} 
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layouts/testimonios
        
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agregar un Testimonial 
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col
                .col-md-8 
                    form(action="", method="post") 
                        .form-group 
                            label(for="nombre")
                            input#nombre(class="form-control" type="text", placeholder= "Tu nombre", name="nombre", value= nombre)                        
                        .form-group 
                            label(for="correo")
                            input#correo(class="form-control" type="text", placeholder= "Tu correo", name="correo", value= correo) 
                        .form-group 
                            label(for="mensaje")
                            textarea#mensaje( class="form-control" type="text", placeholder= "Tu mensaje", name="mensaje", rows="3")= mensaje                      
                        input.btn.btn-success.btn-block(type="submit")